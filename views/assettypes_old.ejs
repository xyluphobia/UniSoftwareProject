<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Asset Types Page</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>

    <h1>Asset Types</h1>


    <nav>
        <a href="/">Home</a> |
        <a href="/about">About Us</a> |
        <a href="/contact">Contact</a>|
        <a href="/assets">Assets</a>
    </nav>

    <table>
        <thead>
            <tr>
                <th>Select</th>
                <th>AssetTypeID</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            <% assettypes.forEach(assettype => { %>
            <tr>
                <td><button class="select-btn" onclick="selectAssetType(this)">Select</button></td>
                <td><%= assettype.AssetTypeID %></td>
                <td><%= assettype.Name %></td>
                <td><%= assettype.Description %></td>
            </tr>
            <% }) %>
            <!-- Blank row for adding a new asset type -->
            <tr>
                <td><button class="select-btn" onclick="selectAssetType(this)">Select</button></td>
                <td><input type="text" ></td>
                <td><input type="text" ></td>
                <td><input type="text" ></td>
            </tr>
        </tbody>
    </table>

    <!-- Form for editing the selected row -->
    <div class="form-container">
        <h2>Edit Selected Asset Type</h2>
        <form id="editForm">
            <label for="editAssetTypeID">AssetTypeID</label>
            <input type="text" id="editAssetTypeID" name="editAssetTypeID" placeholder="Enter AssetTypeID">

            <label for="editName">Name</label>
            <input type="text" id="editName" name="editName" placeholder="Enter name">

            <label for="editDescription">Description</label>
            <input type="text" id="editDescription" name="editDescription" placeholder="Enter description">

            <div class="button-container">
                <button type="button" onclick="saveChanges()">Save Changes</button>
                <button type="reset">Clear</button>
            </div>
        </form>
    </div>

    <script>
        function selectAssetType(button) {
            const row = button.closest('tr');
            const assetTypeID = row.cells[1].innerText;
            const name = row.cells[2].innerText;
            const description = row.cells[3].innerText;

            document.getElementById('editAssetTypeID').value = assetTypeID;
            document.getElementById('editName').value = name;
            document.getElementById('editDescription').value = description;
        }

        function saveChanges() {
            alert('Changes saved!');
        }
    </script>

</body>
</html>
